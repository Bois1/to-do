<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Tasks - Todo App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('./partials/header') %>
    
    <main class="container mt-4">
        <% if (locals.success && success.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <% if (locals.error && error.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        
        <% if (user) { %>
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>My Tasks</h1>
                <a href="/tasks/create" class="btn btn-primary">Create New Task</a>
            </div>

            <% if (tasks.length === 0) { %>
                <div class="text-center py-5">
                    <h3>No tasks found</h3>
                    <p class="text-muted">Create your first task by clicking the button above.</p>
                </div>
            <% } else { %>
                <div class="row">
                    <% tasks.forEach(task => { %>
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card <%= task.status === 'completed' ? 'border-success' : task.status === 'deleted' ? 'border-danger' : 'border-primary' %>">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <h5 class="card-title <%= task.status === 'completed' ? 'text-decoration-line-through text-success' : task.status === 'deleted' ? 'text-decoration-line-through text-danger' : '' %>">
                                            <%= task.title %>
                                        </h5>
                                        <span class="badge bg-<%= task.status === 'completed' ? 'success' : task.status === 'deleted' ? 'danger' : 'warning' %>">
                                            <%= task.status %>
                                        </span>
                                    </div>
                                    
                                    <% if (task.description) { %>
                                        <p class="card-text"><%= task.description %></p>
                                    <% } %>
                                    
                                    <div class="d-flex justify-content-between mt-3">
                                        <small class="text-muted">
                                            Created: <%= new Date(task.createdAt).toLocaleDateString() %>
                                        </small>
                                        
                                        <% if (task.status !== 'deleted') { %>
                                            <div class="btn-group" role="group">
                                                <% if (task.status !== 'completed') { %>
                                                    <form method="POST" action="/tasks/<%= task._id %>/status" class="d-inline">
                                                        <input type="hidden" name="status" value="completed">
                                                        <button type="submit" class="btn btn-sm btn-success">Complete</button>
                                                    </form>
                                                <% } else { %>
                                                    <form method="POST" action="/tasks/<%= task._id %>/status" class="d-inline">
                                                        <input type="hidden" name="status" value="pending">
                                                        <button type="submit" class="btn btn-sm btn-warning">Undo</button>
                                                    </form>
                                                <% } %>
                                                
                                                <form method="POST" action="/tasks/<%= task._id %>/status" class="d-inline">
                                                    <input type="hidden" name="status" value="deleted">
                                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                                </form>
                                            </div>
                                        <% } else { %>
                                            <form method="POST" action="/tasks/<%= task._id %>/status" class="d-inline">
                                                <input type="hidden" name="status" value="pending">
                                                <button type="submit" class="btn btn-sm btn-warning">Restore</button>
                                            </form>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        <% } else { %>
            <div class="text-center py-5">
                <h3>Please login to view your tasks</h3>
                <a href="/login" class="btn btn-primary">Login</a>
            </div>
        <% } %>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
</body>
</html>